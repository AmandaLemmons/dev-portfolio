<h1> Angular Portfolio Items </h1>

<%= link_to "New Portfolio", new_portfolio_path %>
<% @angular_portfolio_items.each do |portfolio_item| %>
  <p><%= link_to "#{portfolio_item.title}", portfolio_show_path(portfolio_item) %> </p>
  <p><%= portfolio_item.subtitle %> </p>
  <p><%= portfolio_item.body %> </p>
  <p><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%> </p>

  <%= link_to "edit Portfolio", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)%>
  <%= link_to "Delete Portfolio", portfolio_item, method: :delete, data: {confirm: "Are you sure?"} if logged_in?(:site_admin)%>

<% end %>
